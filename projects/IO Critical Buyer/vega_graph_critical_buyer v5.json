{
  "width": 1000,
  "height": 600,
  "padding": {"top": 20, "bottom": 100, "left": 50, "right": 300},
  "signals": [
    {
      "name": "hover", "init": null,
      "streams": [
        { "type": "symbol:mouseover",
          "expr": "datum._id" },
        { "type": "window:mouseup, symbol:mouseout", "expr": "null" }
      ]
    },
    {
      "name": "hoverPath", "init": null,
      "streams": [
        { "type": "path:mouseover",
          "expr": "datum" },
        { "type": "window:mouseup, path:mouseout", "expr": "null" }
      ]
    },
    {
      "name": "grab", "init": null,
      "streams": [
        { "type": "symbol:touchstart, symbol:mousedown",
          "expr": "datum._id" },
        { "type": "touchend, window:mouseup", "expr": "null" }
      ]
    },
    {
      "name": "active", "init": null,
      "streams": [
        { "type": "hover, grab", "expr": "{id: grab || hover}" },
        {
          "type": "symbol:touchmove, [symbol:mousedown, window:mouseup] > window:mousemove",
          "expr": "{x: eventX(), y: eventY(), id: grab, update: true}"
        }
      ]
    },
    {
      "name": "dblclick", "init": null, "verbose": true,
      "streams": [
        {"type": "symbol:dblclick", "expr": "datum._id"}
      ]
    }
  ],

  "data": [
    {
      "name": "fixed",
      "modify": [
        {"type": "toggle", "signal": "dblclick", "field": "id"}
      ]
    },
    {
      "name": "nodes",
      "url": "critical_buyer_graph_data v2.json",
      "format": {"type": "json", "property": "nodes"},
      "transform": [
        {
          "type": "formula",
          "field": "layout_x",
          "expr": "width/2.0 + width/2.3 * cos(2.0*PI*datum.name/127.0)"
        },
        {
          "type": "formula",
          "field": "layout_y",
          "expr": "height/2.0 + height/2.3 * sin(2.0*PI*datum.name/127.0)"
        }
      ]
    },
    {
      "name": "edges",
      "url": "critical_buyer_graph_data v2.json",
      "format": {"type": "json", "property": "links"},
      "transform": [
        {
          "type": "filter",
          "test": "datum.rank <= 5"
        },
        {
          "type": "filter",
          "test": "datum.value > 0.1"
        },
        {
          "type": "formula",
          "field": "valuePct",
          "expr": "datum.value * 100"
        },
        {
          "type": "lookup", "on": "nodes",
          "keys": ["source", "target"],
          "as": ["_source", "_target"]
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "nodeSize",
      "type": "linear",
      "domain": {"data": "nodes", "field": "total_demand"},
      "range": [80, 400]
    },
    {
      "name": "nodeColour",
      "type": "ordinal",
      "domain": {"data": "nodes", "field": "cluster"},
      "range": "category10"
    },
    {
      "name": "lineThickness",
      "type": "linear",
      "domain": {"data": "edges", "field": "value"},
      "range": [0.5, 6]
    }
  ],

  "legends": [
    {
      "fill": "nodeColour",
      "title": "Clusters",
      "offset": 0,
      "properties": {
        "title": {
          "fontSize": {"value": 14}
        },
        "labels": {
          "fontSize": {"value": 12}
        },
        "symbols": {
          "stroke": {"value": "transparent"}
        }
      }
    }
  ],

  "marks": [
    {
      "type": "path",
      "from": {
        "data": "edges",
        "transform": [
          {
            "type": "linkpath",
            "shape": "curve",
            "tension": 0.3
          }
        ]
      },
      "properties": {
        "enter": {
          "path": {"field": "layout_path"},
          "strokeWidth": {"scale": "lineThickness", "field": "value"}
        },
        "update": {
          "stroke": [
            {
              "test": "hoverPath ? (datum._id == hoverPath._id) : false",
              "value": "#c00"
            },
            {
              "test": "indata('fixed', datum._target._id, 'id')",
              "value": "#fc9"
            },
            {
              "test": "indata('fixed', datum._source._id, 'id')",
              "value": "#9cf"
            },
            {"value": "#ccc"}
          ]
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "nodes"},
      "properties": {
        "enter": {
          "fill": {"scale": "nodeColour", "field": "cluster"},
          "size": {"scale": "nodeSize", "data": "nodes", "field": "total_demand"},
          "stroke": {"value": "transparent"},
          "strokeWidth": {"value": 1.5},
          "x": {"field": "layout_x"},
          "y": {"field": "layout_y"}
        },
        "hover": {
          "stroke": {"value": "#900"}
        },
        "update": {
          "stroke": [
            {
              "test": "indata('fixed', datum._id, 'id')",
              "value": "#900"
            },
            {"value": "transparent"}
          ]
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "nodes"},
      "properties": {
        "enter": {
          "align": {"value": "left"},
          "fill": {"value": "#666"},
          "x": {"field": "layout_x"},
          "y": {"field": "layout_y"},
          "dx": {"value": 12}
        },
        "update": {
          "text": [
            {
              "test": "(indata('fixed', datum._id, 'id')) || (datum._id == hover)",
              "template": "{{datum.desc}}"
            },
            {"value": ""}
          ]
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "nodes"},
      "properties": {
        "enter": {
          "align": {"value": "left"},
          "fill": {"value": "#666"},
          "x": {"field": "layout_x"},
          "y": {"field": "layout_y"},
          "dx": {"value": 12},
          "dy": {"value": 12}
        },
        "update": {
          "text": [
            {
              "test": "indata('fixed', datum._id, 'id')",
              "template": "Total demand: ${{datum.total_demand|number:',.1f'}} mil"
            },
            {"value": ""}
          ]
        }
      }
    },
    {
      "type": "text",
      "properties": {
        "enter": {
          "align": {"value": "left"},
          "fill": {"value": "#900"},
          "x": {"value": 610},
          "y": {"value": 16},
          "fontSize": {"value": 14}
        },
        "update": {
          "text": [
            {
              "test": "hoverPath",
              "template": "Supplier: {{hoverPath._source.desc}}"
            },
            {"value": ""}
          ]
        }
      }
    },
    {
      "type": "text",
      "properties": {
        "enter": {
          "align": {"value": "left"},
          "fill": {"value": "#900"},
          "x": {"value": 610},
          "y": {"value": 32},
          "fontSize": {"value": 14}
        },
        "update": {
          "text": [
            {
              "test": "hoverPath",
              "template": "Buyer: {{hoverPath._target.desc}}"
            },
            {"value": ""}
          ]
        }
      }
    },
    {
      "type": "text",
      "properties": {
        "enter": {
          "align": {"value": "left"},
          "fill": {"value": "#900"},
          "x": {"value": 610},
          "y": {"value": 48},
          "fontSize": {"value": 14}
        },
        "update": {
          "text": [
            {
              "test": "hoverPath",
              "template": "Buyer buys {{hoverPath.valuePct|number:',.1f'}}% of supplier's output"
            },
            {"value": ""}
          ]
        }
      }
    }
  ]
}
